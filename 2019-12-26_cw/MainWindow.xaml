<Window x:Class="_2019_12_26_cw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2019_12_26_cw"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <CheckBox x:Name="myCheckBox" Content="Turn on button" IsChecked="true" Grid.Row="0" Command="local:MyCommands.ChangeButtonStatus" Margin="10"/>
        <Button x:Name="myButton" Content="Open" Command="ApplicationCommands.Open" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
