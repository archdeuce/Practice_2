<Window x:Class="Task_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <GroupBox Header="GroupBox Sample" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="First Name:" Grid.Row="0" VerticalAlignment="Bottom"/>
                <Label Content="Last Name:" Grid.Row="2" VerticalAlignment="Bottom"/>
                <TextBox Grid.Row="1" TextWrapping="Wrap" Text="" />
                <TextBox Grid.Row="3" TextWrapping="Wrap" Text="" />
                <Button Content="Add User" Grid.Row="4" Margin="0, 5" />
            </Grid>
        </GroupBox>

    </Grid>
</Window>
