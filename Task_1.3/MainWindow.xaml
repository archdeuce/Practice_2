<Window
    x:Class="Task_1._3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_1._3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <ComboBox x:Name="myComboBox" Grid.Row="0">
            <ComboBoxItem Content="red" />
            <ComboBoxItem Content="green" />
            <ComboBoxItem Content="blue" />
        </ComboBox>

        <TextBox
            x:Name="myTextBox"
            Grid.Row="1"
            FontSize="20"
            Foreground="{Binding ElementName=myComboBox, Path=SelectedIndex}"
            Text="Entered text with selected color" />
        
        <Label
            Grid.Row="2"
            VerticalContentAlignment="Bottom"
            Content="{Binding ElementName=myTextBox, Path=Text}"
            FontSize="20" />
    </Grid>
</Window>
