<Window
    x:Class="Task_1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="500"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <TextBox
            x:Name="myTextBox1"
            Grid.Row="1"
            Grid.Column="0"
            Text="Text1" />
        <TextBox
            x:Name="myTextBox2"
            Grid.Row="3"
            Grid.Column="0"
            Text="Text2" />
        <Label
            x:Name="myLabel1"
            Grid.Row="1"
            Grid.Column="1"
            Content="{Binding ElementName=myTextBox1, Path=Text}" />
        <Label
            x:Name="myLabel2"
            Grid.Row="3"
            Grid.Column="1"
            Content="{Binding ElementName=myTextBox2, Path=Text}" />
    </Grid>
</Window>
