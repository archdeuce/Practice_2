<UserControl
    x:Class="Presentation.View.StudentDetailedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Presentation.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    DataContext="{Binding SelectedStudent}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="2">
            <Label Content="FirstName" />
            <TextBox Text="{Binding FirstName}" />

            <Label Content="LastName" />
            <TextBox Text="{Binding LastName}" />

            <Label Content="Email" />
            <TextBox Text="{Binding Email}" />

            <Label Content="Phone" />
            <TextBox Text="{Binding PhoneNumber}" />

            <Label Content="DateOfBirth" />
            <DatePicker SelectedDate="{Binding DateOfBirth}" />

            <Label Content="EnteranceDate" />
            <DatePicker SelectedDate="{Binding EnteranceDate}" />

            <Label Content="Books" />
            <TextBlock Text="{Binding Books.Count}" />
        </StackPanel>
    </Grid>
</UserControl>